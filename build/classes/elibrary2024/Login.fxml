<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>

<AnchorPane id="mainPane" fx:id="mainPane" prefHeight="425.0" prefWidth="431.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="elibrary2024.LoginSceneController">

   <children>
      <Text layoutX="176.0" layoutY="135.0" strokeType="OUTSIDE" strokeWidth="0.5" text="Login">
         <font><Font name="System Bold" size="20.0" /></font>
      </Text>
      <ImageView fitHeight="104.0" fitWidth="92.0" layoutX="166.0" layoutY="11.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/SMUCT-logo-01.png" />
         </image>
      </ImageView>
      <TextField fx:id="userName" layoutX="165.0" layoutY="182.0" promptText="email or username" />
      <Text layoutX="94.0" layoutY="199.0" text="Username"><font><Font size="14.0" /></font></Text>
      <PasswordField fx:id="password" layoutX="165.0" layoutY="230.0" promptText="password" />
      <Text layoutX="94.0" layoutY="245.0" text="Password"><font><Font size="14.0" /></font></Text>
      <Button layoutX="166.0" layoutY="281.0" onAction="#handleSubmitAction" style="-fx-background-color: #292266;" text="Login" textFill="WHITE"/>
      <Button layoutX="246.0" layoutY="281.0" onAction="#openRegister" style="-fx-background-color: #288141;" text="Register" textFill="WHITE"/>
   </children>
</AnchorPane>
